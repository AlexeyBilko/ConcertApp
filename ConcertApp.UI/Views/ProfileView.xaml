<UserControl x:Class="ConcertApp.UI.Views.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConcertApp.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="385" d:DesignWidth="710"
             DataContext="{Binding Source={StaticResource locator}, Path=ProfileViewModel}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="4*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1" Grid.Column="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock FontSize="22" FontFamily="Berlin Sans FB Demi" Margin="0,6,0,0" HorizontalAlignment="Left">Your name:</TextBlock>
                        <TextBlock FontSize="22" FontFamily="Berlin Sans FB Demi" Margin="0,6,0,0" HorizontalAlignment="Left">Your surname:</TextBlock>
                        <TextBlock FontSize="22" FontFamily="Berlin Sans FB Demi" Margin="0,6,0,0" HorizontalAlignment="Left">Your email:</TextBlock>
                        <TextBlock FontSize="21" FontFamily="Berlin Sans FB Demi" Margin="0,6,0,0" HorizontalAlignment="Left">Your number phone:</TextBlock>
                        <TextBlock FontSize="22" FontFamily="Berlin Sans FB Demi" Margin="0,6,0,0" HorizontalAlignment="Left">Your password:</TextBlock>
                        <TextBlock FontSize="22" FontFamily="Berlin Sans FB Demi" Margin="0,6,0,0" HorizontalAlignment="Left">Quantity tickets:</TextBlock>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock FontSize="22" FontFamily="Berlin Sans FB Demi" Margin="0,6,0,0" Text="{Binding CurrentUser.Name}" HorizontalAlignment="Right"></TextBlock>
                        <TextBlock FontSize="22" FontFamily="Berlin Sans FB Demi" Margin="0,6,0,0" Text="{Binding CurrentUser.Surname}" HorizontalAlignment="Right"></TextBlock>
                        <TextBlock FontSize="22" FontFamily="Berlin Sans FB Demi" Margin="0,6,0,0" Text="{Binding CurrentUser.Email}" HorizontalAlignment="Right"></TextBlock>
                        <TextBlock FontSize="22" FontFamily="Berlin Sans FB Demi" Margin="0,6,0,0" Text="{Binding CurrentUser.NumberPhone}" HorizontalAlignment="Right"></TextBlock>
                        <TextBlock FontSize="22" FontFamily="Berlin Sans FB Demi" Margin="0,6,0,0" Text="{Binding CurrentUser.Password}" HorizontalAlignment="Right"></TextBlock>
                        <TextBlock FontSize="22" FontFamily="Berlin Sans FB Demi" Margin="0,6,0,0" Text="{Binding CurrentUser.Tickets.Count}" HorizontalAlignment="Right"></TextBlock>
                    </StackPanel>
                </Grid>
                
            </StackPanel>
        </Grid>
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
            <Button  
                Style="{StaticResource ButtonStyle1}" Width="120" 
                Height="50" Command="{Binding WatchingTickets}"
                FontFamily="Berlin Sans FB Demi" FontSize="20" 
                Foreground="White" Background="DarkRed">My tickets</Button>

            <Button  
                Style="{StaticResource ButtonStyle1}" Width="120" 
                Height="50" Margin="40,0,0,0" 
                Command="{Binding ExitCommand}"
                FontFamily="Berlin Sans FB Demi" FontSize="20" Foreground="White" Background="DodgerBlue">Exit</Button>
        </StackPanel>

        <Button Grid.Column="0" Grid.Row="1" Foreground="Black" Background="White" BorderBrush="White" Height="60" FontSize="15" FontWeight="Bold"
                Command="{Binding GoBackCommand}">
            BACK
        </Button>
    </Grid>
</UserControl>
