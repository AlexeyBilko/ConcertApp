<Window x:Class="ConcertApp.Admin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConcertApp.Admin"
        xmlns:vm="clr-namespace:ConcertApp.Admin.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">
    <Window.DataContext>
        <vm:MainViewModel></vm:MainViewModel>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="4*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Button Command="{Binding ListEventCommand}">List Event</Button>
            <Button Command="{Binding CreateConcertCommand}">Create event</Button>
            <Button Command="{Binding RemoveConcertCommand}">Delete event</Button>
            <Button Command="{Binding UpdateConcertCommand}">Update event</Button>
            <Button Command="{Binding BanUserCommand}">Ban user</Button>
        </StackPanel>
        <ContentControl Grid.Column="1" Content="{Binding CurrentPage}">
            
        </ContentControl>
    </Grid>
</Window>
